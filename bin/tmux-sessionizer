#!/usr/bin/env bash

paths=(
    "$HOME/.dot-files"
    "$HOME/.config/nvim"
    "$HOME/.config/ghostty"
)

if [[ $# -eq 1 ]]; then
    selected=$1
else
    selected=$( (
        tmux ls -F "#{session_name}"
        for path in "${paths[@]}"; do
            echo "$path"
        done
        find ~/Workplace -mindepth 1 -maxdepth 1 -type d
        find ~/Workplace/seubarriga-worktrees -mindepth 1 -maxdepth 1 -type d
    ) | fzf --height 100% --prompt='âš¡ ' --header='Choose a session' --select-1 --exit-0 \
          --preview-window 'right:50%' \
          --preview 'if tmux has-session -t {} 2>/dev/null; then
                       echo "ðŸ“º Session: {}"
                       echo "â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”"
                       tmux list-windows -t {} -F "#{window_index}: #{window_name} #{window_flags}"
                       echo "â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”"
                       echo "Current pane content:"
                       tmux capture-pane -t {} -p
                     elif [[ -d {} ]]; then
                       echo "ðŸ“ Directory: {}"
                       echo "â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”"
                       ls -la {}
                     else
                       echo "No preview available"
                     fi')
fi

if [[ -z $selected ]]; then
    exit 0
fi

generate_session_name() {
    local selected_path="$1"
    local parent_dir=$(basename "$(dirname "$selected_path")")

    if [[ "$parent_dir" == *-worktrees ]]; then
        local project_name=${parent_dir%-worktrees}
        local branch_name=$(basename "$selected_path" | tr . _)
        echo "${project_name}-${branch_name}"
    else
        echo "$(basename "$selected_path" | tr . _)"
    fi
}

selected_name=$(generate_session_name "$selected")
tmux_running=$(pgrep tmux)

if [[ -z $TMUX ]] && [[ -z $tmux_running ]]; then
    tmux new-session -s $selected_name -c $selected
    exit 0
fi

if ! tmux has-session -t=$selected_name 2>/dev/null; then
    tmux new-session -ds $selected_name -c $selected
fi

tmux switch-client -t $selected_name
